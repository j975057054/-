.hd-cont text{
    font-size: 14px;
    color:#444;
    height: 32px;
    margin: 14rpx 0 26rpx;
    line-height: 16px;
    overflow: hidden;
}
.mgt18{ margin-top: 18rpx;}
.refer-item{
    border-top:1px solid #e9e9e9;
    padding: 4.5px 0 4px;
    align-items: center;
}
.refer-item:active{
    background-color: #eee;
    margin: 0 -12px;
    padding: 4.5px 12px 4px;
}
.refer-list{padding: 0 24rpx ;background-color: #fff;}
.refer-img{
    margin-right: 6px;
    /*background: url(../images/default_refer.png) 0 0 no-repeat;*/
    background-size: 51px 51px;
    background-color: #ccc;
}
.refer-item image{
    width: 51px;
    height: 51px;
    display: block;
}
.refer-text text:first-child{
    height: 16px;
    line-height: 16px;
    overflow: hidden;
}
.refer-time{
    margin-top: 4px;
    font-size: 12px;
    color:#7e7f81;
}
/*无网络*/
.no-network{
    font-size: 14px;
    color: #b3b3b3;
    width: 100%;
    height: 100%;
    background-color: #f0eff4;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 99;
}
.no-network image{
    width: 65.5px;
    height: 45px;
    margin-bottom: 6px;
}
.dbn{display: none;}